<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BeLajarPage">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextText3"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/buttongreenborder"
                android:drawableLeft="@drawable/imagesearch"
                android:drawablePadding="10dp"
                android:hint="Artikel apa yang ingin Anda baca?"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="30dp"
                android:paddingBottom="3dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/berakyat_semibold"
                android:text="Terbaru"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextText3" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView32">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView24"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="8dp"
                        android:padding="5dp"
                        android:src="@drawable/logo_kompas_artikel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Kompasiana.com"
                        android:textColor="#5708FF"
                        android:paddingTop="2dp"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView24"
                        app:layout_constraintStart_toEndOf="@+id/imageView24"
                        app:layout_constraintTop_toTopOf="@+id/imageView24" />

                    <ImageView
                        android:id="@+id/imageView27"
                        android:layout_width="0dp"
                        android:layout_height="215dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gambar_sawah_belajar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView24" />

                    <ImageView
                        android:id="@+id/imageView28"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/view_eye_logo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView27" />

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="59 melihat"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView28"
                        app:layout_constraintStart_toEndOf="@+id/imageView28"
                        app:layout_constraintTop_toTopOf="@+id/imageView28" />

                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView34">

                        <TextView
                            android:id="@+id/textView35"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/berakyat_semibold"
                            android:text="Author: Setyo Purwoto"
                            android:textColor="#6A40C5"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textView36"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/berakyat_semibold"
                            android:text="Kenaikan Harga Beras: Dilema Konsumen dan Petani"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textView37"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beras adalah makanan pokok bagi sebagian besar masyarakat Indonesia. Tanaman dengan nama latin Oryza Sativa menjadi salah satu bahan pangan pokok masyarakat Indonesia untuk memenuhi kebutuhan karbohidrat sehari-hari. "
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:translationY="-2dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView38"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/round_container"
                        android:backgroundTint="#F4D16B"
                        android:paddingHorizontal="7dp"
                        android:paddingVertical="1dp"
                        android:text="Diterbitkan pada 27/03/24"
                        android:textColor="@color/black"
                        android:textSize="9sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView7_duplicate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView7">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView24_duplicate"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="8dp"
                        android:padding="2dp"
                        android:src="@drawable/logo_cnn_artikel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView33_duplicate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:paddingTop="2dp"
                        android:text="CNNIndonesia.com"
                        android:textColor="#5708FF"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView24_duplicate"
                        app:layout_constraintStart_toEndOf="@+id/imageView24_duplicate"
                        app:layout_constraintTop_toTopOf="@+id/imageView24_duplicate" />

                    <ImageView
                        android:id="@+id/imageView27_duplicate"
                        android:layout_width="wrap_content"
                        android:layout_height="215dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gula_carousel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView24_duplicate" />

                    <ImageView
                        android:id="@+id/imageView28_duplicate"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/view_eye_logo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView27_duplicate" />

                    <TextView
                        android:id="@+id/textView34_duplicate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="27 melihat"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView28_duplicate"
                        app:layout_constraintStart_toEndOf="@+id/imageView28_duplicate"
                        app:layout_constraintTop_toTopOf="@+id/imageView28_duplicate" />

                    <LinearLayout
                        android:id="@+id/linearLayout5_duplicate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView34_duplicate">

                        <TextView
                            android:id="@+id/textView35_duplicate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/berakyat_semibold"
                            android:text="Author: Setyo Purwoto"
                            android:textColor="#6A40C5"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textView36_duplicate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/berakyat_semibold"
                            android:text="Kenaikan Harga Beras: Dilema Konsumen dan Petani"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textView37_duplicate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beras adalah makanan pokok bagi sebagian besar masyarakat Indonesia. Tanaman dengan nama latin Oryza Sativa menjadi salah satu bahan pangan pokok masyarakat Indonesia untuk memenuhi kebutuhan karbohidrat sehari-hari. "
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:translationY="-2dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView38_duplicate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/round_container"
                        android:backgroundTint="#F4D16B"
                        android:paddingHorizontal="7dp"
                        android:paddingVertical="1dp"
                        android:text="Diterbitkan pada 27/03/24"
                        android:textColor="@color/black"
                        android:textSize="9sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout5_duplicate" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>